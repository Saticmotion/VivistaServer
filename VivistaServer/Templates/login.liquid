<div class="pure-g center">
	<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3 pure-u-xl-1-4">
		<h1>Log in</h1>
		<form action="" method="post" class="pure-form pure-form-stacked">
			<fieldset>
				{% if error %}
					<p class="formerror">{{ error }}</p>
				{% endif %}
				<label for="email">Email</label>
				<input type="email" name="email" class="pure-input-1" required="" value="{{ email }}" autofocus="">
				<br>
				<label for="password">Password</label>
				<input type="password" name="password" class="pure-input-1" required="">
				<br>
				<div class="pure-controls">
					<button class="pure-button" action="submit">Login</button>
				</div>
			</fieldset>
		</form>
		<br>
		<p><a href="register">Don't have an account?</a></p>
		<p><a href="reset_password">Forgot your password?</a></p>
	</div>
</div>

<div class="pure-g center">
	<div class="pure-u-1 pure-u-md-1-2 pure-u-lg-1-3 pure-u-xl-1-4">
		<h1>Reset password</h1>
		<form action="" method="post" class="pure-form pure-form-stacked">
			<fieldset>
				<label for="email">Email</label>
				<input type="email" name="email" class="pure-input-1" required="" value="{{ email }}" disabled="">
				<input type="hidden" name="token" class="pure-input-1" required="" value="{{ token }}">
				<br>
				<label for="password">Password</label>
				<input type="password" name="password" class="pure-input-1" required="">
				<br>
				<label for="password-confirmation">Confirm password</label>
				<input type="password" name="password-confirmation" class="pure-input-1" required="">
				<br>
				<div class="pure-controls">
					<button class="pure-button" action="submit">Reset password</button>
				</div>
			</fieldset>
		</form>
		<br>
	</div>
</div>

<div class="pure-g">
	<div class="pure-u-1 user-header">
		<h2>{{ user.username }}</h2>
		<p>{{ pagination.totalCount }} videos</p>
	</div>
	{% for video in videos %}
		<div class="video-tile pure-u-1 pure-u-sm-1-2 pure-u-md-1-3 pure-u-lg-1-4 pure-u-xl-1-6">
			<a href="/video?id={{ video.id }}">
				<img class="video-thumb pure-img" src="thumb.png">
			</a>
			<p>
				<a href="/video?id={{ video.id }}">{{ video.title }}</a>
			</p>
		</div>
	{% endfor %}
	
	{% if pagination.totalCount > pagination.count %}
		<div class="pure-u-1">
			{% for i in pagination.pageNumbers %}
				{% if i == pagination.page %}
					<a href="?user={{user.username}}&page={{i}}" class="pure-button pure-button-active">{{i}}</a>
				{% else %}
					<a href="?user={{user.username}}&page={{i}}" class="pure-button">{{i}}</a>
				{% endif %}
			{% endfor %}
		</div>
	{% endif %}
</div>
